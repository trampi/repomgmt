<% environment.context_class.instance_eval {
    include Rails.application.routes.url_helpers
} %>

window.Repomgmt = {
    adminUsersPath: function() {
        return <%= admin_users_path(format: :json).to_json %>;
    },
    createAdminUserPath: function(userName) {
        return <%= admin_users_path.to_json %> + "/" + userName + "/new";
    },
    editAdminUserPath: function(userObj) {
        return <%= admin_users_path.to_json %> + "/" + userObj.id + "/edit";
    },
    adminRepositoriesPath: function() {
        return <%= admin_repositories_path(format: :json).to_json %>;
    },
    createAdminRepositoryPath: function(repositoryName) {
        return <%= admin_repositories_path.to_json %> + "/" + repositoryName + "/new";
    },
    editAdminRepositoryPath: function(repositoryObj) {
        return <%= admin_repositories_path.to_json %> + "/" + repositoryObj.id + "/edit";
    },
    adminStatisticsSystemPath: function() {
        return <%= admin_statistics_system_path(format: :json).to_json %>
    },
    statisticsRepositoryPath: function(repositoryId) {
        return <%= statistics_repositories_path.to_json %> + "/" + repositoryId + ".json";
    },
    statisticsUserPath: function(userId) {
        return <%= statistics_users_path.to_json %> + "/" + userId + ".json";
    },
    isAdmin: function() {
        return gon.is_admin;
    },
    projectPath: function(projectId) {
        return <%= repositories_path.to_json %> + "/" + projectId;
    },
    tasksPath: function() {
        return <%= tasks_path.to_json %>;
    },
    createTaskPath: function(taskName) {
        return <%= tasks_path.to_json %> + "/" + taskName + "/new";
    },
    editTaskPath: function(task) {
        return <%= tasks_path.to_json %> + "/" + task.id;
    }
};
